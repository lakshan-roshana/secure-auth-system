{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ConnectionString": "REPLACE_WITH_YOUR_MONGODB_CONNECTION_STRING",
    "DataBase": "securedb",
    "Collection": "users"
  },
  "Jwt": {
    "SecretKey": "REPLACE_WITH_YOUR_JWT_SECRET_KEY",
    "Issuer": "SecureAuth",
    "Audience": "SecureAuthUsers",
    "ExpirationHours": "24"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200"
    ]
  }
}
